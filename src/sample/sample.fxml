<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>

<HBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <VBox>
        <HBox>
            <ListView fx:id="employeeListView"/>
        </HBox>
        <HBox>
            <Button text="Delete Selected" fx:id="btnDeleteSelected" />
        </HBox>
    </VBox>
    <VBox>
        <HBox>
            <Label text="First Name" prefWidth="100"/>
            <TextField prefWidth="150" fx:id="firstNameTextField"/>
        </HBox>
        <HBox>
            <Label text="Last Name" prefWidth="100"    />
            <TextField prefWidth="150" fx:id="lastNameTextField"/>
        </HBox>
        <HBox>
            <Label text="Is Active" prefWidth="100"    />
            <CheckBox fx:id="isActiveCheckBox"/>
        </HBox>
        <HBox>
            <Label text="Misc." prefWidth="100"    />
            <TextField prefWidth="150" fx:id="MiscField"/>
        </HBox>
        <HBox>
            <Button text="Clear" fx:id="btnClear" />
            <Button text="Add New" fx:id="btnAddNew" />
        </HBox>
    </VBox>
</HBox>