<HBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <VBox>
        <HBox>
            <JFXListView fx:id="employeeListView"/>
        </HBox>
        <HBox>
            <JFXButton text="Delete Selected" fx:id="btnDeleteSelected" />
            <JFXSnackbar />
        </HBox>
    </VBox>
    <VBox>
        <HBox>
            <Label text="First Name" prefWidth="100"/>
            <JFXTextField prefWidth="150" fx:id="firstNameTextField"/>
        </HBox>
        <HBox>
            <Label text="Last Name" prefWidth="100"    />
            <TextField prefWidth="150" fx:id="lastNameTextField"/>
        </HBox>
        <HBox>
            <Label text="Is Active" prefWidth="100"    />
            <JFXCheckBox fx:id="isActiveCheckBox"/>
        </HBox>
        <HBox>
            <Label text="Misc." prefWidth="100"    />
            <TextField prefWidth="150" fx:id="MiscField"/>
        </HBox>
        <HBox>
            <JFXButton text="Clear" fx:id="btnClear" />
            <JFXButton text="Add New" fx:id="btnAddNew" />
        </HBox>


    </VBox>
</HBox>